#!/bin/bash

##### CONFIGURATION #####

MAC="E8:EC:A3:30:0C:62"
MODE="connect"

#########################

STATUS=$(bluetoothctl info $MAC | awk '/Connected/ {print $2}')

case $1 in 
	on|enable)
		MODE="connect"
	;;
	off|disable)
		MODE="disconnect"
	;;
	t|toggle)
		echo $STATUS | grep "yes" # Check if already connected
		if [ $? == 0 ];
		then
			MODE="disconnect"
		else
			MODE="connect"
		fi
	;;
esac

bluetoothctl << EOF
$MODE $MAC
EOF
